<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingTop="5dp"

    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Calculator"
        android:id="@+id/tipCalculatorTitle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:id="@+id/billAmountLabel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@+id/percentUpButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percent"
        android:id="@+id/percentLabel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip"
        android:id="@+id/tipLabel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billAmountEditText"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/billAmountLabel"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="-"
        android:id="@+id/percentDownButton"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/percentUpButton"
        android:layout_toEndOf="@+id/percentUpButton" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/percentUpButton"
        android:paddingTop="5dp"
        android:layout_marginStart="38dp"
        android:layout_alignBottom="@+id/percentLabel"
        android:layout_toEndOf="@+id/totalTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/totalLabel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/tipLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:id="@+id/percentTextView"
        android:textSize="20sp"
       android:paddingTop="5dp"
        android:layout_alignBottom="@+id/percentUpButton"
        android:layout_alignStart="@+id/tipTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:id="@+id/tipTextView"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/tipLabel"
        android:layout_alignStart="@+id/billAmountEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/totalTextView"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/totalLabel"
        android:layout_alignStart="@+id/tipTextView" />

</RelativeLayout>
